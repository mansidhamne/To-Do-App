<%- include('partials/header.ejs') %>

<div class="box-date">
    <h3><%= displayDate %></h3>
</div>
    
<div class="box" id="list-box">
    <form action="/" method="POST" id="addItem">
            <div class="row">
                <input class="addTask" type="text" name="newItem" autocomplete="off" placeholder="Add Task">
                <button class="add" type="submit">Add</button>
            </div>    
    </form>
    <% for( i=0; i<newListItem.length; i++){  %>
        <div class="item">
            <input type="checkbox" name="" id="checkbox">
            <p><%= newListItem[i] %></p>
            <div class="del">
                <form action="/delete" method="POST">
                    <button class="delete" type="submit" name="delTask" value="<%= newListItem[i]%>">‚ùå</button>
                </form>
            </div> 
        </div>
        
    <% } %>
</div>

    

